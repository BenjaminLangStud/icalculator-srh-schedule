<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Define the appenders -->
    <Appenders>
        <!-- Console Appender -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %logger{15} - %msg%n" />
        </Console>
        <!-- File Appender -->
        <File name="ApplicationFileAppender" fileName="${sys:user.home}/.srh-schedule-ical-app/applogs/application_logs.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </File>
        <File name="GUIFileAppender" fileName="${sys:user.home}/.srh-schedule-ical-app/applogs/gui_logs.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </File>


        <RollingFile name="RollingAppender"
                        fileName="${sys:user.home}/.srh-schedule-ical-app/applogs/everything.log"
                        filePattern="${sys:user.home}/.srh-schedule-ical-app/applogs/everything-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />

            <Policies>
                <SizeBasedTriggeringPolicy size="1MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <!-- Define the loggers -->
    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="RollingAppender" />
        </Root>

        <Logger name="com.benny.icalculation.application" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="ApplicationFileAppender" />
        </Logger>
        <Logger name="com.benny.icalculation.gui" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="GUIFileAppender" />
        </Logger>
    </Loggers>
</Configuration>